<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ScrollView
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.4"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/horizontalpadding">

            <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                android:id="@+id/paciente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fab_margin"
                android:textColorHint="@color/TextColor"
                app:met_floatingLabel="highlight"
                android:hint="@string/paciente" />

            <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                android:id="@+id/medico"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fab_margin"
                android:textColorHint="@color/TextColor"
                app:met_floatingLabel="highlight"
                android:hint="@string/medico" />


            <Button
                android:id="@+id/login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/buttonE"
                android:theme="@style/RaisedButtonDark"
                android:layout_marginTop="@dimen/fab_margin"
                android:onClick="ValidateLogin"
                android:textColorHint="@color/EditTextColorWhite"
                android:textColor="@color/EditTextColorWhite"

                />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>